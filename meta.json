{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchPackagePatterns": ["(^|\\/)traefik$"],
      "matchDatasources": ["docker"],
      "sourceUrl": "https://github.com/containous/traefik"
    },
    {
      "matchPackagePatterns": ["(^|\\/)rook\\/"],
      "matchDatasources": ["docker"],
      "sourceUrl": "https://github.com/rook/rook"
    },
    {
      "matchPackageNames": ["jenkins"],
      "matchDatasources": ["docker"],
      "sourceUrl": "https://jenkins.io/changelog-stable"
    },
    {
      "matchPackageNames": ["gitea/gitea"],
      "matchDatasources": ["docker"],
      "sourceUrl": "https://github.com/go-gitea/gitea"
    },
    {
      "matchPackagePatterns": ["^goharbor\\/"],
      "matchDatasources": ["docker"],
      "sourceUrl": "https://github.com/goharbor/harbor"
    },
    {
      "matchPackageNames": ["dpage/pgadmin4"],
      "matchDatasources": ["docker"],
      "sourceUrl": "https://www.pgadmin.org"
    },
    {
      "matchPackagePatterns": ["^(?:amd64\\/)?nextcloud$"],
      "matchDatasources": ["docker"],
      "sourceUrl": "https://nextcloud.com/changelog"
    },
    {
      "matchPackageNames": ["harbor"],
      "matchDatasources": ["helm"],
      "sourceUrl": "https://github.com/goharbor/harbor-helm"
    },
    {
      "matchPackagePatterns": ["^certbot\\/"],
      "matchDatasources": ["docker"],
      "sourceUrl": "https://github.com/certbot/certbot"
    },
    {
      "matchPackageNames": ["coredns/coredns"],
      "matchDatasources": ["docker"],
      "sourceUrl": "https://github.com/coredns/coredns"
    },
    {
      "matchPackageNames": ["neilpang/acme.sh"],
      "matchDatasources": "docker",
      "sourceUrl": "https://github.com/acmesh-official/acme.sh"
    }
  ]
}
