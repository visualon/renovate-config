{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "packagePatterns": ["(^|\\/)traefik$"],
      "datasources": ["docker"],
      "sourceUrl": "https://github.com/containous/traefik"
    },
    {
      "packagePatterns": ["(^|\\/)rook\\/"],
      "datasources": ["docker"],
      "sourceUrl": "https://github.com/rook/rook"
    },
    {
      "packagePatterns": ["(^|atlassian\\/)jira-software$"],
      "datasources": ["docker"],
      "sourceUrl": "https://confluence.atlassian.com/jirasoftware/jira-software-release-notes"
    },
    {
      "packagePatterns": ["(^|atlassian\\/)bitbucket-server$"],
      "datasources": ["docker"],
      "sourceUrl": "https://confluence.atlassian.com/bitbucketserver/bitbucket-server-release-notes"
    },
    {
      "packageNames": ["jenkins"],
      "datasources": ["docker"],
      "sourceUrl": "https://jenkins.io/changelog-stable"
    },
    {
      "packageNames": ["gitea/gitea"],
      "datasources": ["docker"],
      "sourceUrl": "https://github.com/go-gitea/gitea"
    }
  ]
}
