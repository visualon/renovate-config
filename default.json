{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>visualon/renovate-config:shared",
    "github>visualon/renovate-config:vo",
    ":dependencyDashboard",
    ":dependencyDashboardApproval",
    ":assignee(viceice)"
  ],
  "prCreation": "not-pending",
  "automergeType": "branch",
  "separateMinorPatch": true,
  "ignorePresets": [":ignoreModulesAndTests"],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/tests/**"
  ],
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "extends": [":automergeMinor", "schedule:nonOfficeHours"],
      "automergeType": "pr",
      "updateNotScheduled": false
    },
    {
      "updateTypes": ["major", "minor"],
      "stabilityDays": 3,
      "prNotPendingHours": 73
    },
    {
      "depTypeList": ["peerDependencies"],
      "rangeStrategy": "replace"
    },
    {
      "updateTypes": ["lockFileMaintenance"],
      "dependencyDashboardApproval": false,
      "automerge": true
    },
    {
      "sourceUrlPrefixes": ["https://github.com/angular/angular-cli"],
      "minor": { "automerge": false },
      "separateMajorMinor": false
    },
    {
      "depTypeList": ["action"],
      "extractVersion": "^(?<version>v\\d+\\.\\d+\\.\\d+)$",
      "versioning": "regex:^v(?<major>\\d+)(\\.(?<minor>\\d+)\\.(?<patch>\\d+))?$"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["\\.tf$"],
      "matchStrings": [
        "\\s+image_[a-z_]+\\s+=\\s+\"(?<lookupName>[a-z./-]+):(?<currentValue>[a-z0-9.-]+)(?:@(?<currentDigest>sha256:[a-f0-9]+))?\"\\s+# renovate:(?: depName=(?<depName>.+?))?(?: versioning=(?<versioning>.*?))?\\s"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}docker{{/if}}",
      "depNameTemplate": "{{#if depName}}{{depName}}{{else}}{{lookupName}}{{/if}}"
    },
    {
      "fileMatch": ["\\.tf$"],
      "matchStrings": ["required_version\\s*=\\s*\"(?<currentValue>.+?)\""],
      "datasourceTemplate": "docker",
      "versioningTemplate": "hashicorp",
      "depNameTemplate": "hashicorp/terraform"
    }
  ]
}
