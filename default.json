{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>visualon/renovate-config:shared",
    ":dependencyDashboard",
    ":dependencyDashboardApproval",
    ":assignee(viceice)"
  ],
  "prCreation": "not-pending",
  "automergeType": "branch",
  "timezone": "Europe/Berlin",
  "separateMinorPatch": true,
  "semanticCommits": "enabled",
  "ignorePresets": [":ignoreModulesAndTests"],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/tests/**"
  ],
  "postUpdateOptions": ["yarnDedupeHighest"],
  "dockerfile": {
    "pinDigests": true
  },
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "extends": [":automergeMinor", "schedule:nonOfficeHours"],
      "automergeType": "pr",
      "dependencyDashboardApproval": false,
      "updateNotScheduled": false
    },
    {
      "updateTypes": ["major", "minor"],
      "stabilityDays": 3,
      "prNotPendingHours": 73
    },
    {
      "updateTypes": ["patch", "digest", "pin"],
      "dependencyDashboardApproval": false
    },
    {
      "depTypeList": ["peerDependencies"],
      "rangeStrategy": "replace"
    },
    {
      "updateTypes": ["lockFileMaintenance"],
      "dependencyDashboardApproval": false,
      "automerge": true
    },
    {
      "packagePatterns": ["^VisualOn\\.Microsoft\\."],
      "groupName": "visualon-microsoft monorepo"
    },
    {
      "packagePatterns": ["^@pnp\\/"],
      "sourceUrlPrefixes": ["https://github.com/pnp/pnpjs"],
      "groupName": "pnpjs monorepo"
    },
    {
      "sourceUrlPrefixes": [
        "https://github.com/dotnet/",
        "https://github.com/aspnet/"
      ],
      "groupName": "dotnet packages"
    },
    {
      "sourceUrlPrefixes": [
        "https://github.com/NLog/"
      ],
      "groupName": "nlog packages"
    },
    {
      "packagePatterns": ["^mcr\\.microsoft\\.com\\/dotnet\\/"],
      "groupName": "dotnet docker images"
    },
    {
      "packagePatterns": ["^@start\\/"],
      "sourceUrlPrefixes": ["https://github.com/deepsweet/start"],
      "groupName": "start monorepo"
    },
    {
      "packagePatterns": ["^Unity\\.", "^unity\\."],
      "sourceUrlPrefixes": ["https://github.com/unitycontainer/"],
      "groupName": "unity packages"
    },
    {
      "packagePatterns": ["^Snapper$", "^Snapper\\."],
      "sourceUrlPrefixes": ["https://github.com/theramis/Snapper"],
      "groupName": "snapper packages"
    },
    {
      "packagePatterns": ["(^|/)renovate$"],
      "groupName": "renovatebot",
      "dependencyDashboardApproval": false,
      "automerge": true
    },
    {
      "packageNames": ["visualon/images"],
      "groupName": "visualon images"
    },
    {
      "packageNames": [
        "coverlet.collector",
        "coverlet.msbuild",
        "MinVer",
        "minver-cli",
        "Microsoft.NET.Test.Sdk",
        "NLog.Schema",
        "NSubstitute",
        "NSubstitute.Analyzers.CSharp",
        "renovate",
        "renovate/renovate",
        "ReportGenerator",
        "dotnet-reportgenerator-cli",
        "dotnet-reportgenerator-globaltool",
        "Snapper",
        "Snapper.NUnit",
        "NUnit",
        "NUnit3TestAdapter",
        "VisualOn.Build.SigningKey",
        "visualon.msbuild.tasks",
        "visualon/images",
        "visualon/renovate"
      ],
      "updateTypes": ["minor", "patch", "digest", "pin"],
      "dependencyDashboardApproval": false,
      "automerge": true
    },
    {
      "packageNames": [
        "visualon/images",
        "@types/vo-app-base"
      ],
      "packagePatterns": [
        "^@vsaf\\/",
        "^VisualOn\\.",
        "(^|/)renovate$"
      ],
      "stabilityDays": 0,
      "prNotPendingHours": 25
    },
    {
      "sourceUrlPrefixes": ["https://github.com/angular/angular-cli"],
      "minor": { "automerge": false },
      "separateMajorMinor": false
    },
    {
      "depTypeList": ["action"],
      "extractVersion": "^(?<version>v\\d+\\.\\d+\\.\\d+)$",
      "versioning": "regex:^v(?<major>\\d+)(\\.(?<minor>\\d+)\\.(?<patch>\\d+))?$"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["\\.tf$"],
      "matchStrings": [
        "\\s+image_[a-z_]+\\s+=\\s+\"(?<lookupName>[a-z./-]+):(?<currentValue>[a-z0-9.-]+)(?:@(?<currentDigest>sha256:[a-f0-9]+))?\"\\s+# renovate:(?: depName=(?<depName>.+?))?(?: versioning=(?<versioning>.*?))?\\s"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}docker{{/if}}",
      "depNameTemplate": "{{#if depName}}{{depName}}{{else}}{{lookupName}}{{/if}}"
    },
    {
      "fileMatch": ["\\.tf$"],
      "matchStrings": ["required_version\\s*=\\s*\"(?<currentValue>.+?)\""],
      "datasourceTemplate": "docker",
      "versioningTemplate": "hashicorp",
      "depNameTemplate": "hashicorp/terraform"
    }
  ]
}
