{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>visualon/renovate-config:shared",
    "github>visualon/renovate-config:vo",
    ":dependencyDashboard",
    ":assignee(viceice)"
  ],
  "automergeType": "branch",
  "separateMinorPatch": true,
  "ignorePresets": [":ignoreModulesAndTests"],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/tests/**"
  ],
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "extends": [":automergeMinor", "schedule:nonOfficeHours"],
      "automergeType": "pr"
    },
    {
      "matchUpdateTypes": ["major", "minor"],
      "stabilityDays": 3,
      "dependencyDashboardApproval": true,
      "prNotPendingHours": 73
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "rangeStrategy": "replace"
    },
    {
      "matchUpdateTypes": ["lockFileMaintenance"],
      "automerge": true
    },
    {
      "matchSourceUrlPrefixes": ["https://github.com/angular/angular-cli"],
      "minor": { "automerge": false },
      "separateMajorMinor": false
    },
    {
      "matchDepTypes": ["action"],
      "extractVersion": "^(?<version>v\\d+\\.\\d+\\.\\d+)$",
      "versioning": "regex:^v(?<major>\\d+)(\\.(?<minor>\\d+)\\.(?<patch>\\d+))?$"
    }
  ]
}
