{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":maintainLockFilesWeekly",
    "docker:enableMajor",
    "github>whitesource/merge-confidence:beta",
    "github>visualon/renovate-config:meta",
    "github>visualon/renovate-config:fixes",
    "github>visualon/renovate-config:groups"
  ],
  "prCreation": "not-pending",
  "timezone": "Europe/Berlin",
  "semanticCommits": "enabled",
  "postUpdateOptions": ["yarnDedupeHighest"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor"],
      "stabilityDays": 3,
      "prNotPendingHours": 73
    },
    {
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    },
    {
      "matchManagers": ["dockerfile", "droneci"],
      "pinDigests": true
    },
    {
      "matchManagers": ["droneci"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "dependencyDashboardApproval": false,
      "automerge": true
    },
    {
      "matchFiles": ["Jenkinsfile"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "dependencyDashboardApproval": false,
      "automerge": true
    },
    {
      "matchUpdateTypes": ["patch", "digest", "pin"],
      "dependencyDashboardApproval": false
    },
    {
      "description": "Automerge dotnet dev packages",
      "matchPackageNames": [
        "coverlet.collector",
        "coverlet.msbuild",
        "MinVer",
        "minver-cli",
        "Microsoft.NET.Test.Sdk",
        "NLog.Schema",
        "NSubstitute",
        "NSubstitute.Analyzers.CSharp",
        "ReportGenerator",
        "dotnet-reportgenerator-cli",
        "dotnet-reportgenerator-globaltool",
        "Snapper",
        "Snapper.NUnit",
        "NUnit",
        "NUnit3TestAdapter"
      ],
      "matchUpdateTypes": ["minor", "patch", "digest", "pin"],
      "dependencyDashboardApproval": false,
      "automerge": true
    },
    {
      "matchPackageNames": ["haproxy"],
      "allowedVersions": "/^\\d+\\.\\d*[02468]\\.\\d+(-\\w+)?$/"
    },
    {
      "description": "Date based releases",
      "matchPackagePatterns": ["(^|\\/)minio$"],
      "separateMinorPatch": false,
      "separateMajorMinor": false
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["\\.tf$"],
      "matchStrings": [
        "\\s+image_[a-z0-9_]+\\s+=\\s+\"(?<lookupName>[a-z0-9.\\/-]+)(?::(?<currentValue>[a-z0-9.-]+))?(?:@(?<currentDigest>sha256:[a-f0-9]+))?\"\\s+# renovate:(?: depName=(?<depName>.+?))?(?: versioning=(?<versioning>.*?))?\\s"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}docker{{/if}}",
      "depNameTemplate": "{{#if depName}}{{depName}}{{else}}{{lookupName}}{{/if}}"
    },
    {
      "fileMatch": ["\\.tf$"],
      "matchStrings": ["required_version\\s*=\\s*\"(?<currentValue>.+?)\""],
      "datasourceTemplate": "docker",
      "versioningTemplate": "hashicorp",
      "depNameTemplate": "hashicorp/terraform"
    }
  ]
}
