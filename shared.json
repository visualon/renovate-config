{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":maintainLockFilesWeekly",
    "docker:enableMajor",
    "github>whitesource/merge-confidence:beta",
    "github>visualon/renovate-config:meta",
    "github>visualon/renovate-config:fixes",
    "github>visualon/renovate-config:groups"
  ],
  "timezone": "Europe/Berlin",
  "semanticCommits": "enabled",
  "postUpdateOptions": ["yarnDedupeHighest"],
  "packageRules": [
    {
      "managers": ["dockerfile", "droneci"],
      "pinDigests": true
    },
    {
      "managers": ["droneci"],
      "updateTypes": ["minor", "patch", "digest"],
      "dependencyDashboardApproval": false,
      "automerge": true
    },
    {
      "paths": ["Jenkinsfile"],
      "updateTypes": ["minor", "patch", "digest"],
      "dependencyDashboardApproval": false,
      "automerge": true
    },
    {
      "updateTypes": ["patch", "digest", "pin"],
      "dependencyDashboardApproval": false
    },
    {
      "packageNames": [
        "coverlet.collector",
        "coverlet.msbuild",
        "MinVer",
        "minver-cli",
        "Microsoft.NET.Test.Sdk",
        "NLog.Schema",
        "NSubstitute",
        "NSubstitute.Analyzers.CSharp",
        "renovate",
        "renovate/renovate",
        "ReportGenerator",
        "dotnet-reportgenerator-cli",
        "dotnet-reportgenerator-globaltool",
        "Snapper",
        "Snapper.NUnit",
        "NUnit",
        "NUnit3TestAdapter",
        "VisualOn.Build.SigningKey",
        "visualon.msbuild.tasks",
        "visualon/images",
        "visualon/renovate"
      ],
      "updateTypes": ["minor", "patch", "digest", "pin"],
      "dependencyDashboardApproval": false,
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["\\.tf$"],
      "matchStrings": [
        "\\s+image_[a-z0-9_]+\\s+=\\s+\"(?<lookupName>[a-z0-9.\\/-]+)(?::(?<currentValue>[a-z0-9.-]+))?(?:@(?<currentDigest>sha256:[a-f0-9]+))?\"\\s+# renovate:(?: depName=(?<depName>.+?))?(?: versioning=(?<versioning>.*?))?\\s"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}docker{{/if}}",
      "depNameTemplate": "{{#if depName}}{{depName}}{{else}}{{lookupName}}{{/if}}"
    },
    {
      "fileMatch": ["\\.tf$"],
      "matchStrings": ["required_version\\s*=\\s*\"(?<currentValue>.+?)\""],
      "datasourceTemplate": "docker",
      "versioningTemplate": "hashicorp",
      "depNameTemplate": "hashicorp/terraform"
    }
  ]
}
